<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ParaTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#F00</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="IDCardInfo" parent="ParaTextView">
        <item name="android:textColor">#808080</item>
    </style>

    <!-- 自定义样式 -->
    <style name="realplay_info">
        <item name="android:textColor">#7cc0e8</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center|right</item>
    </style>
    <style name="realplay_data_big">
        <item name="android:gravity">center</item>
        <item name="android:textSize">42dp</item>
    </style>

    <style name="realplay_data_small">
        <item name="android:gravity">center</item>
        <item name="android:textSize">40dp</item>
    </style>

</resources>
